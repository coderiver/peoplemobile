extends include/_layout

block title
	title Home

block content
	//begin promo
	.promo
		a(href="#").title.title_promo.js-voteButton vote
			i.arrow
		//begin category
		.category.category_promo.js-voteCategory(hidden)
			ul
				li
					a(href="#").category__item.blue
						i.ico.ico_movies-big
						| movies
				li
					a(href="#").category__item.green
						i.ico.ico_tv-big
						| tv
				li
					a(href="#").category__item.yellow
						i.ico.ico_music-big
						| music
		//end category
	//end promo
	//begin wrap
	.wrap.wrap_no-padding-top
		h1.title.title_news
			span news
		//begin slider
		.slider
			.slider__slide
				a(href="#").box.box_half-left
					img(src="http://placehold.it/295x295")
					.box__footer.yellow
						i.ico.ico_music
						| MUSIC
				a(href="#").box.box_half-right
					img(src="http://placehold.it/295x295")
					.box__footer.green
						i.ico.ico_tv
						| TV
			//- .slider__slide.js-slick-slide
			//- 	a(href="#").box.box_half-left
			//- 		img(src="http://placehold.it/295x295")
			//- 		.box__footer.yellow
			//- 			i.ico.ico_music
			//- 			| MUSIC
			//- 	a(href="#").box.box_half-right
			//- 		img(src="http://placehold.it/295x295")
			//- 		.box__footer.green
			//- 			i.ico.ico_tv
			//- 			| TV

			.slider__dots
				ul
					li
					li.is-active
					li
					li
		//end slider
		//begin category
		.category
			ul
				li
					a(href="#").category__item pools
				li
					a(href="#").category__item photos
				li
					a(href="#").category__item videos
		//end category
	//end wrap