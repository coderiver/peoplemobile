extends include/_layout-topnav

block title
	title Thanks Popup

block header
	include include/_header-logo-awards

block topnav
	//begin topnav
	nav.topnav.label-h.label-h_blue
		span.title.title_topnav favorite movie actor
	//end topnav

block content
	//

block other
	//begin popup
	.popup
		.popup__header thanks for voting
		.popup__hide
		.popup__in
			p
				| Come back often and vote for your favorites in movies, TV and music.
				| Be sure to tune in on January XXth at X/X on CBS to see the winners.
			a(href="#").social-btn.social-btn_fb
				span Share on Facebook
			a(href="#").social-btn.social-btn_tw
				span Share on Twitter
			ul.social
				li
					a(href="#").tw twitter
				li
					a(href="#").fb facebook
				li
					a(href="#").inst instagram
			.popup__title Latest from the<br>People’s Choice Blog
			ul.popup__blog-items
				li Confession time: Which shows have you binge-watched?
				li Who Would You Cast in the new ‘Power rangers’ movie?
			.popup__tote
				.popup__tote-left
					span Sweepstakes Presented by
					img(src="img/coca.png")
				.popup__tote-right
					| Enter for a chance to win a something from a sponsor and be on your way to the top!
		a(href="#").btn.btn_popup enter now
	//end popup